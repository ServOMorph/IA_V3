#:import dp kivy.metrics.dp
#:import config_ui ui.config_ui


<SelectableItem>:
    size_hint_y: None
    height: dp(36)
    halign: 'left'
    text_size: self.size
    padding: dp(12), 0
    color: (1,1,1,1)
    canvas.before:
        Color:
            rgba: config_ui.COLOR_USER_BUBBLE if self.selected else (0, 0, 0, 0)
        Rectangle:
            size: self.size
            pos: self.pos

<ZoneListeConv>:
    orientation: 'vertical'
    spacing: dp(6)
    padding: dp(6)
    BoxLayout:
        size_hint_y: None
        height: dp(32)
        Label:
            text: "Conversations"
            bold: True
            halign: 'left'
            valign: 'middle'
            text_size: self.size
    RecycleView:
        id: rv
        viewclass: 'SelectableItem'
        scroll_type: ['bars', 'content']
        bar_width: dp(6)
        RecycleBoxLayout:
            default_size: None, dp(36)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

#:import config_ui ui.config_ui

<SelectableItem>:
    selected: False
    canvas.before:
        Color:
            rgba: config_ui.COLOR_USER_BUBBLE if self.selected else config_ui.COLOR_USER_BUBBLE_LIGHT if self.hovered else (0, 0, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.size

    halign: "left"
    text_size: self.size
    color: (1, 1, 1, 1) if self.hovered or self.selected else (1, 1, 1, 0.7)
    bold: self.selected
    padding: [10, 5]
    font_size: config_ui.FONT_SIZE_CONV_LIST


<ZoneListeConv>:
    orientation: "vertical"
    spacing: dp(5)
    padding: dp(5)

    # --- Bouton + avec hover ---
    PlusButton:
        id: btn_plus
        source: "assets/images/plus_icon.png"
        size_hint_y: None
        height: dp(40)
        on_release: print("Bouton + cliqu√©")

    Label:
        text: "Conversations"
        size_hint_y: None
        height: dp(30)
        halign: "left"
        valign: "middle"
        text_size: self.size
        color: (1, 1, 1, 1)
        bold: True
        font_size: "15sp"

    RecycleView:
        id: rv
        viewclass: "SelectableItem"
        scroll_type: ['bars', 'content']
        bar_width: dp(8)

        RecycleBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            default_size: None, dp(32)
            default_size_hint: 1, None
            height: self.minimum_height

<ImageButton@ButtonBehavior+Image>:
    allow_stretch: True
    keep_ratio: True

<ZoneMessage>:
    orientation: 'vertical'
    padding: dp(0)
    spacing: dp(0)

    AnchorLayout:
        anchor_y: 'center'
        anchor_x: 'left'
        size_hint_y: 1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(48)
            size_hint_x: None
            width: dp(700)
            spacing: dp(8)
            padding: [dp(10), 0, 0, 0]

            # --- Pillule uniquement pour la zone texte ---
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(48)
                size_hint_x: 1

                canvas.before:
                    Color:
                        rgba: 0.15, 0.15, 0.15, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [self.height/2]

                canvas.after:
                    Color:
                        rgba: 0.235, 0.235, 0.235, 1   # gris #3c3c3c
                    Line:
                        width: 0.5
                        rounded_rectangle: (self.x, self.y, self.width, self.height, self.height/2)

                SubmitTextInput:
                    id: input
                    text: root.text
                    hint_text: root.placeholder
                    multiline: False
                    background_normal: ''
                    background_active: ''
                    background_color: 0, 0, 0, 0
                    foreground_color: 1, 1, 1, 1
                    cursor_blink: True
                    padding: [dp(15), dp(14), dp(10), dp(14)]
                    write_tab: False
                    size_hint_x: 1
                    on_text: root._on_text(self.text)

            # --- Bouton envoyer à l'extérieur ---
            ImageButton:
                source: 'assets/images/send_icon.png'
                size_hint: None, None
                size: dp(35), dp(35)
                on_release: root.submit()
                pos_hint: {"center_y": 0.5} 
